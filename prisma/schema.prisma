generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id           String     @id @default(cuid())
  clerkId      String     @unique
  email        String     @unique
  refreshToken String
  emails       Email[]
  templates    Template[]
}

model Email {
  id      String   @id @default(cuid())
  userId  String
  to      String
  subject String
  body    String
  sentAt  DateTime @default(now())
  user    User     @relation(fields: [userId], references: [id])
}

model OpenEvent {
  id       String   @id @default(cuid())
  email    String
  openedAt DateTime @default(now())
}

model Template {
  id        String   @id @default(cuid())
  userId    String
  name      String
  category  String
  subject   String
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
